# Database settings (must match Laravel's database)
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

# Laravel APP_KEY for decrypting credentials
# Copy this from the Laravel .env file
APP_KEY=base64:your-app-key-here

# RabbitMQ settings
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=security-scans

# Prowler settings
PROWLER_OUTPUT_DIR=/tmp/prowler

# HCC AWS credentials for cross-account role assumption
# These credentials are used to call STS AssumeRole when customers
# use IAM Role authentication instead of IAM Access Keys.
# The IAM user only needs sts:AssumeRole permission.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Sentry error tracking (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0
